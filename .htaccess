<IfModule mod_rewrite.c>

    RewriteEngine On

    RewriteCond %{THE_REQUEST} \s/public/ [NC]
    RewriteRule ^public/(.*) /$1 [R=302,L]

    RewriteCond %{REQUEST_URI} !^/public/
    RewriteCond %{REQUEST_FILENAME} !-f
    RewriteCond %{REQUEST_FILENAME} !-d
    RewriteRule ^(.*)$ public/$1 [L]

</IfModule>
